<div class="form-container">
  <h2 style="text-align: center;">Login</h2>

  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <%= form_with url: login_path, method: :post, local: true do |f| %>
    <div class="field">
      <%= f.label :email, 'Email' %>
      <%= f.email_field :email, name: 'session[email]', class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :password, 'Password' %>
      <%= f.password_field :password, name: 'session[password]', class: 'form-control' %>
    </div>
    <div class="actions">
      <%= f.submit 'Login', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
