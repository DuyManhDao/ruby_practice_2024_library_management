<div class="author">
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-3">
        <div class="card">
          <div class="card-body-img">
            <img src="<%= @author.profile_picture_url %>" class="card-img-top" alt="<%= @author.name %>">
          </div>
          <div style="display: flex; flex-direction: column;">
            <p class="birth"><%= @author.name %></p>
            <p class="birth"><%= @author.birth_year %></p>
          </div>
        </div>
      </div>
      <div class="col-md-9">
        <div class="card">
          <div class="card-body text">
            <h5 class="card-title">Tác giả: <strong><%= @author.name %></strong></h5>
            <div class="text_author">
              <p class="card-text"><%= simple_format(@author.bio) %></p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-10">
        <h2 class="mb-4">Những tác phẩm chính</h2>
        <ul class="list-group">
          <% @books.each do |book| %>
            <li class="list-group-item">
              <%= link_to book.name, book_path(book), class: 'btn btn-link' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
